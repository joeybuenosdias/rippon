{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": ["DOM", "ESNext"],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
        "types": ["jest", "node"]
    },
    "include": ["src", "jest.config.ts", "setupTests.js"]
}